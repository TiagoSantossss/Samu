<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/laranja"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Mapa -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <!-- Cabeçalho com Tipo de Transporte -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="@color/laranja">

                    <ImageView
                        android:id="@+id/ivTransporteIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_bus"
                        android:tint="#FFFFFF"
                        android:contentDescription="Ícone do transporte"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:id="@+id/tvTipoTransporte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STCP"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="16dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Informações Principais -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Tempo -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:tint="@color/laranja"
                            android:contentDescription="Ícone de tempo"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tempo"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvTempoEstimado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25 min"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />
                    </LinearLayout>

                    <!-- Divisor vertical -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DDDDDD" />

                    <!-- Preço -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:tint="@color/laranja"
                            android:contentDescription="Ícone de preço"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preço"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvPreco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="€2,00"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />
                    </LinearLayout>

                    <!-- Divisor vertical -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DDDDDD" />

                    <!-- Distância -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:tint="@color/laranja"
                            android:contentDescription="Ícone de distância"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distância"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvDistancia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.2 km"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Origem e Destino -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trajeto"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp" />

                    <!-- Origem -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_origin"
                            android:tint="#4CAF50"
                            android:contentDescription="Ícone de origem"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:id="@+id/tvOrigem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Avenida dos Aliados"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <!-- Linha vertical pontilhada -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:background="#CCCCCC"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Destino -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_destination"
                            android:tint="#F44336"
                            android:contentDescription="Ícone de destino"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:id="@+id/tvDestino"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Casa da Música"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botão de Ação -->
            <Button
                android:id="@+id/btnAcao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comprar Bilhete"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@color/laranja"
                android:padding="16dp"
                android:layout_margin="16dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
